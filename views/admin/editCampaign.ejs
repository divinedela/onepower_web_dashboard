<!-- partial:partials/header -->
<%- include('../layouts/header.ejs') %>

<!--begin::App-->
<div class="d-flex flex-column flex-root app-root" id="kt_app_root">

  <!--begin::Page-->
  <div class="app-page flex-column flex-column-fluid" id="kt_app_page">
    <!--begin::navbar-->
    <div id="kt_app_header" class="app-header d-flex flex-column flex-stack">
      <!--begin::navbar main-->
      <%- include('../layouts/navbar.ejs') %>
      <!--end::navbar main-->
      <!--begin::Separator-->
      <div class="app-header-separator"></div>
      <!--end::Separator-->
    </div>
    <!--end::navbar-->

    <!--begin::Wrapper-->
    <div class="app-wrapper flex-column flex-row-fluid" id="kt_app_wrapper">
      <!--begin::Sidebar-->
      <div id="kt_app_sidebar" class="app-sidebar flex-column" data-kt-drawer="true" data-kt-drawer-name="app-sidebar" data-kt-drawer-activate="{default: true, lg: false}" data-kt-drawer-overlay="true" data-kt-drawer-width="250px" data-kt-drawer-direction="start" data-kt-drawer-toggle="#kt_app_sidebar_mobile_toggle">
        <!--begin::Main sidebar-->
        <%- include('../layouts/sidebar.ejs') %>
        <!--end::Main sidebar-->
      </div>
      <!--end::Sidebar-->

      <!--begin::Main-->
      <div class="app-main flex-column flex-row-fluid" id="kt_app_main">
        <!--begin::Content wrapper-->
        <div class="d-flex flex-column flex-column-fluid">
          <!--begin::Toolbar-->
          <div id="kt_app_toolbar" class="app-toolbar pt-5">
            <!--begin::Toolbar container-->
            <div id="kt_app_toolbar_container" class="app-container container-fluid d-flex align-items-stretch">
              <!--begin::Toolbar wrapper-->
              <div class="app-toolbar-wrapper d-flex flex-stack flex-wrap gap-4 w-100">
                <!--begin::Page title-->
                <div class="page-title d-flex flex-column gap-1 me-3 mb-2">
                  <!--begin::Breadcrumb-->
                  <ul class="breadcrumb breadcrumb-separatorless fw-semibold mb-6">
                    <li class="breadcrumb-item text-gray-700 fw-bold lh-1">
                      <a href="#" class="text-gray-500">
                        <i class="ki-solid ki-lovely fs-2x text-gray-400 me-n1"></i>
                      </a>
                    </li>
                    <li class="breadcrumb-item">
                      <i class="ki-duotone ki-right fs-4 text-gray-700 mx-n1"></i>
                    </li>
                    <li class="breadcrumb-item text-gray-700 fw-bold lh-1">Campaign</li>
                    <li class="breadcrumb-item">
                      <i class="ki-duotone ki-right fs-4 text-gray-700 mx-n1"></i>
                    </li>
                    <li class="breadcrumb-item text-gray-700 fw-bold lh-1">
                      <a href="<%= process.env.BASE_URL %>campaign" class="text-gray-700 text-hover-primary">View All Campaign</a>
                    </li>
                    <li class="breadcrumb-item">
                      <i class="ki-duotone ki-right fs-4 text-gray-700 mx-n1"></i>
                    </li>
                    <li class="breadcrumb-item text-gray-700 fw-bold lh-1">Edit Project</li>
                  </ul>
                  <!--end::Breadcrumb-->
                </div>
                <!--end::Page title-->
              </div>
              <!--end::Toolbar wrapper-->
            </div>
            <!--end::Toolbar container-->
          </div>
          <!--end::Toolbar-->

          <!--begin::Content-->
          <div id="kt_app_content" class="app-content flex-column-fluid pt-0">
            <!--begin::Content container-->
            <div id="kt_app_content_container" class="app-container container-fluid">

              <!-- Helper to resolve image URL (Firebase absolute or legacy relative) -->
              <%
                function resolveImg(u) {
                  const PLACEHOLDER = 'assets/media/svg/blank-image.svg';
                  if (!u) return PLACEHOLDER;
                  if (/^https?:\/\//i.test(u)) return u;
                  return (typeof IMAGE_URL !== 'undefined' ? (IMAGE_URL || '') : '') + u;
                }
              %>

              <!--begin::Row-->
              <div class="row g-5 d-flex justify-content-center">
                <!-- bedin:: card -->
                <div class="card mb-5 mb-xl-10">
                  <!--begin::Card header-->
                  <div class="card-header border-0 cursor-pointer" role="button" data-bs-toggle="collapse" data-bs-target="#kt_account_profile_details" aria-expanded="true" aria-controls="kt_account_profile_details">
                    <div class="card-title m-0">
                      <h3 class="fw-bold m-0 fs-1">Edit Project</h3>
                    </div>
                  </div>
                  <!--end::Card header-->

                  <!--begin::Content-->
                  <div id="kt_account_settings_profile_details" class="collapse show">

                    <!--begin::Form-->
                    <form class="form" method="post" enctype="multipart/form-data">
                      <!--begin::Card body-->
                      <div class="card-body border-top">

                        <!-- flash message -->
                        <% if (flash.error.length > 0) { %>
                        <div class="alert alert-dismissible bg-light-danger d-flex align-items-center mb-10">
                          <span class="fs-4 text-danger fw-bold text-center ps-5"><%= flash.error %></span>
                          <button type="button" class="btn btn-icon ms-sm-auto" data-bs-dismiss="alert">
                            <i class="ki-duotone ki-cross fs-1 text-danger fw-bold"><span class="path1"></span><span class="path2"></span></i>
                          </button>
                        </div>
                        <% } %>
                        <!-- end flash -->

                        <!-- Hidden fields -->
                        <input type="hidden" name="id" value="<%= campaign._id %>">
                        <input type="hidden" name="oldImage" value="<%= campaign.image %>">
                        <input type="hidden" name="old_organizer_image" value="<%= campaign.organizer_image %>">

                        <!-- Campaign Image -->
                        <div class="row mb-8">
                          <label class="form-label required fw-semibold fs-6">Image</label>
                          <div class="col-lg-9 fv-row fv-plugins-icon-container">
                            <div class="image-input image-input-outline image-input-placeholder" data-kt-image-input="true">
                              <!-- existing -->
                              <img
                                class="galleryimg image-input-wrapper w-150px h-150px"
                                src="<%= resolveImg(campaign.image) %>"
                                alt="<%= campaign.name %> image"
                                id="campaignImagePreview"
                                onerror="this.onerror=null;this.src='assets/media/svg/blank-image.svg';"
                              />
                              <!-- actions -->
                              <div class="d-flex align-items-center gap-2 mt-3">
                                <!-- Change -->
                                <label class="btn btn-icon btn-circle btn-color-muted btn-active-color-primary w-30px h-30px bg-body shadow"
                                       data-bs-toggle="tooltip" data-bs-dismiss="click" title="Change Image">
                                  <i class="ki-duotone ki-pencil fs-2 text-primary">
                                    <span class="path1"></span>
                                    <span class="path2"></span>
                                  </i>
                                  <input type="file" name="image" id="campaignImageInput" accept=".png,.jpg,.jpeg,.webp" hidden />
                                </label>
                                <!-- Clear selection (revert to old) -->
                                <button type="button" class="btn btn-icon btn-circle btn-color-muted btn-active-color-danger w-30px h-30px bg-body shadow"
                                        id="campaignImageClearBtn" data-bs-toggle="tooltip" title="Clear">
                                  <i class="ki-duotone ki-cross fs-2 text-danger"><span class="path1"></span><span class="path2"></span></i>
                                </button>
                              </div>
                            </div>
                            <div class="form-text">Allowed file types: png, jpg, jpeg, webp.</div>
                          </div>
                        </div>

                        <!-- Name -->
                        <div class="row mb-10">
                          <div class="col-sm-12">
                            <label class="form-label required">Name</label>
                            <input type="text" class="form-control form-control-lg" name="name" placeholder="Enter Campaign Name" value="<%= campaign.name %>" required />
                          </div>
                        </div>

                        <!-- Category & Amount -->
                        <div class="row mb-10">
                          <div class="col-sm-6">
                            <label class="form-label required">Category</label>
                            <select name="categoryId" class="form-select form-control-lg" data-control="select2" data-placeholder="Select Category" required>
                              <option value="">Select Category</option>
                              <% for (const item of categoryData) { 
                                   const selected = String(item._id) === String(campaign.categoryId) ? ' selected' : '';
                              %>
                                <option value="<%= item._id %>"<%= selected %>><%= item.name %></option>
                              <% } %>
                            </select>
                          </div>
                          <div class="col-sm-6">
                            <label class="form-label required">Amount</label>
                            <input type="text" class="form-control form-control-lg" name="amount" value="<%= campaign.campaign_amount %>" placeholder="Enter Amount" required />
                          </div>
                        </div>

                        <!-- Dates -->
                        <div class="row mb-10">
                          <div class="col-sm-6">
                            <label class="form-label required">Starting Date</label>
                            <input class="form-control" name="starting_date" value="<%= campaign.starting_date %>" id="kt_datepicker_2" placeholder="Select Starting Date" />
                          </div>
                          <div class="col-sm-6">
                            <label class="form-label required">Ending Date</label>
                            <input class="form-control" name="ending_date" value="<%= campaign.ending_date %>" id="kt_datepicker_1" placeholder="Select Ending Date" />
                          </div>
                        </div>

                        <!-- Organizer Image -->
                        <div class="row mb-8">
                          <label class="form-label required fw-semibold fs-6">Organizer Image</label>
                          <div class="col-lg-9 fv-row fv-plugins-icon-container">
                            <div class="image-input image-input-outline image-input-placeholder" data-kt-image-input="true">
                              <!-- existing -->
                              <img
                                class="galleryimg image-input-wrapper w-150px h-150px"
                                src="<%= resolveImg(campaign.organizer_image) %>"
                                alt="Organizer"
                                id="organizerImagePreview"
                                onerror="this.onerror=null;this.src='assets/media/svg/blank-image.svg';"
                              />
                              <!-- actions -->
                              <div class="d-flex align-items-center gap-2 mt-3">
                                <!-- Change -->
                                <label class="btn btn-icon btn-circle btn-color-muted btn-active-color-primary w-30px h-30px bg-body shadow"
                                       data-bs-toggle="tooltip" data-bs-dismiss="click" title="Change Image">
                                  <i class="ki-duotone ki-pencil fs-2 text-primary">
                                    <span class="path1"></span>
                                    <span class="path2"></span>
                                  </i>
                                  <input type="file" name="organizer_image" id="organizerImageInput" accept=".png,.jpg,.jpeg,.webp" hidden />
                                </label>
                                <!-- Clear selection (revert to old) -->
                                <button type="button" class="btn btn-icon btn-circle btn-color-muted btn-active-color-danger w-30px h-30px bg-body shadow"
                                        id="organizerImageClearBtn" data-bs-toggle="tooltip" title="Clear">
                                  <i class="ki-duotone ki-cross fs-2 text-danger"><span class="path1"></span><span class="path2"></span></i>
                                </button>
                              </div>
                            </div>
                            <div class="form-text">Allowed file types: png, jpg, jpeg, webp.</div>
                          </div>
                        </div>

                        <!-- Organizer name -->
                        <div class="row mb-10">
                          <div class="col-sm-12">
                            <label class="form-label required">Organizer Name</label>
                            <input type="text" class="form-control form-control-lg" name="organizer_name" value="<%= campaign.organizer_name %>" placeholder="Enter Organizer Name" required />
                          </div>
                        </div>

                        <!-- Description -->
                        <div class="row">
                          <label class="form-label required">Description</label>
                          <div class="col-sm-12">
                            <textarea class="form-control form-control-lg" rows="4" name="description" placeholder="Enter Description" data-kt-autosize="true" required><%= campaign.description %></textarea>
                          </div>
                        </div>

                      </div>
                      <!--end::Card body-->

                      <!--begin::Actions-->
                      <div class="card-footer">
                        <button type="submit" class="btn btn-primary">Edit</button>
                      </div>
                      <!--end::Actions-->
                    </form>
                    <!--end::Form-->

                  </div>
                  <!--end::Content-->

                </div>
                <!-- end:: card  -->
              </div>
              <!--end::Row-->

            </div>
            <!--end::Content container-->
          </div>
          <!--end::Content -->

          <!--begin::Footer-->
          <div id="kt_app_footer" class="app-footer align-items-center justify-content-center justify-content-md-between flex-column flex-md-row py-3">
            <div class="text-dark order-2 order-md-1">
              <span class="text-muted fw-semibold me-1"></span>
              <a href="#" target="_blank" class="text-gray-800 text-hover-primary"></a>
            </div>
          </div>
          <!--end::Footer-->
        </div>
        <!--end::Content wrapper-->

      </div>
      <!--end::Main-->

    </div>
    <!--end:Wrapper-->

  </div>
  <!--end::Page-->

</div>
<!--end::App-->

<!--begin::Scrolltop-->
<div id="kt_scrolltop" class="scrolltop" data-kt-scrolltop="true">
  <i class="ki-duotone ki-arrow-up">
    <span class="path1"></span>
    <span class="path2"></span>
  </i>
</div>
<!--end::Scrolltop-->

<!-- Client-side preview/clear for new file selections -->
<script>
(function() {
  // Keep original URLs so "Clear" reverts preview to current saved image.
  const originalCampaignImg = "<%= resolveImg(campaign.image) %>";
  const originalOrganizerImg = "<%= resolveImg(campaign.organizer_image) %>";

  // Campaign image
  const campaignInput = document.getElementById('campaignImageInput');
  const campaignPreview = document.getElementById('campaignImagePreview');
  const campaignClear = document.getElementById('campaignImageClearBtn');
  let campaignObjectUrl = null;

  if (campaignInput) {
    campaignInput.addEventListener('change', function() {
      if (campaignObjectUrl) URL.revokeObjectURL(campaignObjectUrl);
      if (this.files && this.files[0]) {
        campaignObjectUrl = URL.createObjectURL(this.files[0]);
        campaignPreview.src = campaignObjectUrl;
      } else {
        campaignPreview.src = originalCampaignImg || 'assets/media/svg/blank-image.svg';
      }
    });
  }
  if (campaignClear) {
    campaignClear.addEventListener('click', function() {
      if (campaignObjectUrl) URL.revokeObjectURL(campaignObjectUrl);
      if (campaignInput) campaignInput.value = '';
      campaignPreview.src = originalCampaignImg || 'assets/media/svg/blank-image.svg';
    });
  }

  // Organizer image
  const organizerInput = document.getElementById('organizerImageInput');
  const organizerPreview = document.getElementById('organizerImagePreview');
  const organizerClear = document.getElementById('organizerImageClearBtn');
  let organizerObjectUrl = null;

  if (organizerInput) {
    organizerInput.addEventListener('change', function() {
      if (organizerObjectUrl) URL.revokeObjectURL(organizerObjectUrl);
      if (this.files && this.files[0]) {
        organizerObjectUrl = URL.createObjectURL(this.files[0]);
        organizerPreview.src = organizerObjectUrl;
      } else {
        organizerPreview.src = originalOrganizerImg || 'assets/media/svg/blank-image.svg';
      }
    });
  }
  if (organizerClear) {
    organizerClear.addEventListener('click', function() {
      if (organizerObjectUrl) URL.revokeObjectURL(organizerObjectUrl);
      if (organizerInput) organizerInput.value = '';
      organizerPreview.src = originalOrganizerImg || 'assets/media/svg/blank-image.svg';
    });
  }
})();
</script>

