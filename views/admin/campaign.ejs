<!-- partial:partials/header -->
<%- include('../layouts/header.ejs') %>

<!--begin::App-->
<div class="d-flex flex-column flex-root app-root" id="kt_app_root">

  <!--begin::Page-->
  <div class="app-page flex-column flex-column-fluid" id="kt_app_page">
    <!--begin::navbar-->
    <div id="kt_app_header" class="app-header d-flex flex-column flex-stack">
      <!--begin::navbar main-->
      <%- include('../layouts/navbar.ejs') %>
      <!--end::navbar main-->
      <!--begin::Separator-->
      <div class="app-header-separator"></div>
      <!--end::Separator-->
    </div>
    <!--end::navbar-->

    <!--begin::Wrapper-->
    <div class="app-wrapper flex-column flex-row-fluid" id="kt_app_wrapper">
      <!--begin::Sidebar-->
      <div id="kt_app_sidebar" class="app-sidebar flex-column" data-kt-drawer="true" data-kt-drawer-name="app-sidebar" data-kt-drawer-activate="{default: true, lg: false}" data-kt-drawer-overlay="true" data-kt-drawer-width="250px" data-kt-drawer-direction="start" data-kt-drawer-toggle="#kt_app_sidebar_mobile_toggle">
        <!--begin::Main-->
        <%- include('../layouts/sidebar.ejs') %>
        <!--end::Main-->
      </div>
      <!--end::Sidebar-->

      <!--begin::Main-->
      <div class="app-main flex-column flex-row-fluid" id="kt_app_main">
        <!--begin::Content wrapper-->
        <div class="d-flex flex-column flex-column-fluid">
          <!--begin::Toolbar-->
          <div id="kt_app_toolbar" class="app-toolbar pt-5">
            <!--begin::Toolbar container-->
            <div id="kt_app_toolbar_container" class="app-container container-fluid d-flex align-items-stretch">
              <!--begin::Toolbar wrapper-->
              <div class="app-toolbar-wrapper d-flex flex-stack flex-wrap gap-4 w-100">
                <!--begin::Page title-->
                <div class="page-title d-flex flex-column gap-1 me-3 mb-2">
                  <!--begin::Breadcrumb-->
                  <ul class="breadcrumb breadcrumb-separatorless fw-semibold mb-6">
                    <!--begin::Item-->
                    <li class="breadcrumb-item text-gray-700 fw-bold lh-1">
                      <a href="" class="text-gray-500">
                        <i class="ki-solid ki-lovely fs-2x text-gray-400 me-n1"></i>
                      </a>
                    </li>
                    <!--end::Item-->
                    <!--begin::Item-->
                    <li class="breadcrumb-item">
                      <i class="ki-duotone ki-right fs-4 text-gray-700 mx-n1"></i>
                    </li>
                    <!--end::Item-->
                    <!--begin::Item-->
                    <li class="breadcrumb-item text-gray-700 fw-bold lh-1">Project</li>
                    <!--end::Item-->
                    <!--begin::Item-->
                    <li class="breadcrumb-item">
                      <i class="ki-duotone ki-right fs-4 text-gray-700 mx-n1"></i>
                    </li>
                    <!--end::Item-->
                    <!--begin::Item-->
                    <li class="breadcrumb-item text-gray-700 fw-bold lh-1">View All Projects</li>
                    <!--end::Item-->
                  </ul>
                  <!--end::Breadcrumb-->
                  <!--begin::Title-->
                  <h1 class="page-heading d-flex flex-column justify-content-start text-dark fw-bolder fs-1 lh-0 mt-1">Project List</h1>
                  <!--end::Title-->
                </div>
                <!--end::Page title-->
              </div>
              <!--end::Toolbar wrapper-->
            </div>
            <!--end::Toolbar container-->
          </div>
          <!--end::Toolbar-->

          <!--begin::Content-->
          <div id="kt_app_content" class="app-content flex-column-fluid">
            <!--begin::Content container-->
            <div id="kt_app_content_container" class="app-container container-fluid">
              <!--begin: pools-->
              <div class="card card-flush">
                <!--begin::Card header-->
                <div class="card-header border-0 pt-6">
                  <!--begin::Card title-->
                  <div class="card-title mb-5">
                    <!--begin::Search-->
                    <div class="d-flex align-items-center position-relative my-1">
                      <i class="ki-duotone ki-magnifier fs-3 position-absolute ms-4">
                        <span class="path1"></span>
                        <span class="path2"></span>
                      </i>
                      <input type="text" data-kt-customer-table-filter="search" class="form-control w-250px ps-12" placeholder="Search Project" />
                    </div>
                    <!--end::Search-->
                  </div>
                  <!--begin::Card title-->
                  <!--begin::Card toolbar-->
                  <div class="card-toolbar flex-row-fluid justify-content-end gap-5">

                    <!-- begin::status filter -->
                    <div class="w-100 mw-150px">
                      <!--begin::Select2-->
                      <select class="form-select form-select-lg" data-control="select2" data-hide-search="true" data-placeholder="Status" data-kt-status-filter="status">
                        <option value=""></option>
                        <option value="all">ALL</option>
                        <option value="Running">Running</option>
                        <option value="Upcoming">Upcoming</option>
                        <option value="Ended">Ended</option>
                      </select>
                      <!--end::Select2-->
                    </div>
                    <!-- end::status filter -->

                    <!--begin::Toolbar-->
                    <div class="d-flex justify-content-end" data-kt-subscription-table-toolbar="base">
                      <!--begin::Add campaign-->
                      <a href="<%= process.env.BASE_URL %>add-campaign" class="btn btn-primary">
                        <i class="ki-duotone ki-plus fs-2"></i>Add Project</a>
                      <!--end::Add campaign-->
                    </div>
                    <!--end::Toolbar-->
                  </div>
                  <!--end::Card toolbar-->
                </div>
                <!--end::Card header-->
                <!--begin::Card body-->
                <div class="card-body pt-0">

                  <!-- flash message -->
                  <% if(flash.error.length> 0){ %>
                  <!--begin::Alert-->
                  <div class="alert alert-dismissible bg-light-danger d-flex align-items-center mb-8">
                    <!--begin::Content-->
                    <span class="fs-4 text-danger fw-bold text-center ps-5"><%= flash.error %></span>
                    <!--end::Content-->
                    <!--begin::Close-->
                    <button type="button" class="btn btn-icon ms-sm-auto" data-bs-dismiss="alert">
                      <i class="ki-duotone ki-cross fs-1 text-danger fw-bold"><span class="path1"></span><span class="path2"></span></i>
                    </button>
                    <!--end::Close-->
                  </div>
                  <!--end::Alert-->
                  <% } %>
                  <!-- complete flash message -->

                  <!--begin::Table-->
                  <div class="table-responsive mb-5">
                    <table class="table align-middle table-row-dashed fs-6 gy-5" id="kt_customers_table">
                      <thead>
                        <tr class="text-start text-gray-400 fw-bold fs-6 text-uppercase gs-0">
                          <th class="min-w-50px">No</th>
                          <th class="min-w-40px">Img</th>
                          <th class="min-w-100px">Name</th>
                          <th class="min-w-100px">Category</th>
                          <!-- <th class="min-w-100px">Organizer </th> -->
                          <th class="min-w-100px">Start Date</th>
                          <th class="min-w-100px">End Date</th>
                          <th class="min-w-70px">Amt</th>
                          <th class="min-w-70px">Donated</th>
                          <th class="min-w-70px">Remaining</th>
                          <th class="min-w-70px">Active</th>
                          <th class="min-w-70px">Status</th>
                          <th class="min-w-50px">Actions</th>
                        </tr>
                      </thead>
                      <tbody class="fw-semibold text-gray-600">
                        <% if (campaign.length > 0) { %>
                        <% for (let i = 0; i < campaign.length; i++) { %>
                        <!-- begin:: tr -->
                        <tr>
                          <td><%= i+1 %></td>
                          <td class="">
                              <!-- begin::Thumbnail -->
                            <a href="<%= IMAGE_URL + campaign[i].image %>" class=" symbol symbol-35px overflow-hidden" data-fslightbox="lightbox-basic">
                               <img src="<%=  IMAGE_URL + campaign[i].image %>" alt="<%= campaign[i].image %>" class="symbol-label border border-gray-400">
                            </a>
                            <!-- end::Thumbnail -->
                          </td>
                          <td class="fw-bolder text-dark"><%= campaign[i].name %> </td>
                          <td class="fw-bolder text-dark"><%= campaign[i].categoryId ? campaign[i].categoryId.name : "N/A" %> </td>
                          <td class="pe-0 fw-bold text-gray-800">
                            <%= new Date( campaign[i].starting_date).toLocaleDateString('en-US', {  year: 'numeric', month: 'short', day: 'numeric' }) %>
                          </td>
                          <td class="pe-0 fw-bold text-gray-800">
                            <%= new Date( campaign[i].ending_date).toLocaleDateString('en-US', {  year: 'numeric', month: 'short', day: 'numeric' }) %>
                          </td>
                          <td class="pe-0 fw-bolder text-primary"><%= campaign[i].campaign_amount %> </td>
                          <td class="pe-0 fw-bolder text-success"><%= campaign[i].totalDonationAmount %> </td>
                          <td class="pe-0 fw-bolder text-danger"><%= campaign[i].remainingAmount %> </td>
                          <td class="pe-0">
                            <% if (campaign[i].campaign_status === "Running") { %>
                              <div class="badge badge-light-info fw-bolder">Running</div>
                              <% } else if (campaign[i].campaign_status === "Upcoming") { %>
                              <div class="badge badge-light-primary fw-bolder">Upcoming</div>
                              <% } else { %>
                              <div class="badge badge-light-orange fw-bolder">Ended</div>
                              <% } %>
                          </td>
                          <% for(let j in loginData){ %>
                            <% if(String(loginData[j]._id) === String(locals.admin._id)) {%>
                            <% if(loginData[j].isAdmin === 1){ %>
                            <td class="pe-0" data-bs-toggle="modal" data-bs-target="#kt_modal_change_status_campaign<%= i %>">
                              <% if (campaign[i].status === "Publish") { %>
                              <div class="badge badge-success">Publish</div>
                              <% } else { %>
                              <div class="badge badge-danger">UnPublish</div>
                              <% } %>
                            </td>
                            <% } else if (loginData[j].isAdmin === 0){ %>
                            <td class="pe-0" data-bs-toggle="modal" data-bs-target="#kt_modal_no_access" data-message="You don't have permission to <b>publish/unpubilsh intro</b>. As a <b>demo admin</b>, you can only view the content.">
                              <% if (campaign[i].status === "Publish") { %>
                              <div class="badge badge-success">Publish</div>
                              <% } else { %>
                              <div class="badge badge-danger">UnPublish</div>
                              <% } %>
                            </td>
                              <% } %>
                            <% } %>
                          <% } %>
                          <td class="pe-0">
                            <div class="d-flex align-items-center">
                              <!-- View donor -->
                              <a href="<%= process.env.BASE_URL %>donation?id=<%= campaign[i]._id %>" 
                                 class="menu-link" title="View Donations" 
                                 data-bs-toggle="tooltip" data-bs-trigger="hover" data-bs-dismiss="click" data-bs-placement="top">
                                <div class="symbol symbol-40px symbol-circle user-select-none">
                                  <div class="symbol-label bg-light-warning text-warning">
                                    <i class="ki-solid ki-people fs-2 text-warning fw-bolder"></i>
                                  </div>
                                </div>
                              </a>
                          
                              <!-- Gallery link with condition -->
                              <% if (campaign[i].campaign_status !== "Ended") { %>
                                <a href="<%= process.env.BASE_URL %>gallery?id=<%= campaign[i]._id %>" 
                                   class="menu-link" title="View Gallery" 
                                   data-bs-toggle="tooltip" data-bs-trigger="hover" data-bs-dismiss="click" data-bs-placement="top">
                                  <div class="symbol symbol-40px symbol-circle user-select-none">
                                    <div class="symbol-label bg-light-info text-info">
                                      <i class="ki-solid ki-graph-3 fs-1 text-info fw-bolder"></i>
                                    </div>
                                  </div>
                                </a>
                              <% } else { %>
                                <a data-bs-toggle="modal" data-bs-target="#kt_modal_no_access" 
                                   data-message="You cannot view the <b><%= campaign[i].name %></b> campaign because it's already <b><%= campaign[i].campaign_status %></b> ...">
                                  <div class="symbol symbol-40px symbol-circle user-select-none">
                                    <div class="symbol-label bg-light-info text-info">
                                      <i class="ki-solid ki-graph-3 fs-1 text-info fw-bolder"></i>
                                    </div>
                                  </div>
                                </a>
                              <% } %>
                          
                              <!-- Admin access controls -->
                              <% loginData.forEach(admin => { %>
                                <% if (String(admin._id) === String(locals.admin._id)) { %>
                                  <% if (admin.isAdmin === 1) { %>
                                    
                                    <!-- Edit Campaign (condition based on status) -->
                                    <% if (campaign[i].campaign_status === "Ended" || campaign[i].campaign_status === "Running") { %>
                                      <a data-bs-toggle="modal" data-bs-target="#kt_modal_no_access" 
                                         data-message="You can't edit the <b><%= campaign[i].name %></b> campaign because it's already <b><%= campaign[i].campaign_status %></b> ...">
                                        <div class="symbol symbol-40px symbol-circle user-select-none">
                                          <div class="symbol-label bg-light-primary text-primary">
                                            <i class="ki-solid ki-pencil fs-2 text-primary"></i>
                                          </div>
                                        </div>
                                      </a>
                                    <% } else { %>
                                      <a href="<%= process.env.BASE_URL %>edit-campaign?id=<%= campaign[i]._id %>" class="menu-link">
                                        <div class="symbol symbol-40px symbol-circle user-select-none">
                                          <div class="symbol-label bg-light-primary text-primary">
                                            <i class="ki-solid ki-pencil fs-2 text-primary"></i>
                                          </div>
                                        </div>
                                      </a>
                                    <% } %>
                          
                                    <!-- Delete Campaign (condition based on status) -->
                                    <% if (campaign[i].campaign_status === "Ended" || campaign[i].campaign_status === "Running") { %>
                                      <a data-bs-toggle="modal" data-bs-target="#kt_modal_no_access" 
                                         data-message="You can't delete the <b><%= campaign[i].name %></b> campaign because it's already <b><%= campaign[i].campaign_status %></b> ...">
                                        <div class="symbol symbol-40px symbol-circle user-select-none">
                                          <div class="symbol-label bg-light-danger text-danger">
                                            <i class="ki-solid ki-trash fs-2 text-danger"></i>
                                          </div>
                                        </div>
                                      </a>
                                    <% } else { %>
                                      <a data-bs-toggle="modal" data-bs-target="#kt_modal_delete_campaign<%= i %>">
                                        <div class="symbol symbol-40px symbol-circle user-select-none">
                                          <div class="symbol-label bg-light-danger text-danger">
                                            <i class="ki-solid ki-trash fs-2 text-danger"></i>
                                          </div>
                                        </div>
                                      </a>
                                    <% } %>
                                    
                                  <% } else if (admin.isAdmin === 0) { %>
                                    <!-- Non-admin restrictions -->
                                    <a data-bs-toggle="modal" data-bs-target="#kt_modal_no_access" 
                                       data-message="You don't have permission to <b>edit campaign</b>. As a <b>demo admin</b>, you can only view the content.">
                                      <div class="symbol symbol-40px symbol-circle user-select-none">
                                        <div class="symbol-label bg-light-primary text-primary">
                                          <i class="ki-solid ki-pencil fs-2 text-primary"></i>
                                        </div>
                                      </div>
                                    </a>
                                    <a data-bs-toggle="modal" data-bs-target="#kt_modal_no_access" 
                                       data-message="You don't have permission to <b>delete campaign</b>. As a <b>demo admin</b>, you can only view the content.">
                                      <div class="symbol symbol-40px symbol-circle user-select-none">
                                        <div class="symbol-label bg-light-danger text-danger">
                                          <i class="ki-solid ki-trash fs-2 text-danger"></i>
                                        </div>
                                      </div>
                                    </a>
                                  <% } %>
                                <% } %>
                              <% }) %>
                            </div>
                          </td>
                          
                        </tr>
                        <!-- end::tr -->

                         <!-- begin::Modal - Enable/Disable  campa  -->
                      <div class=" modal fade" id="kt_modal_change_status_campaign<%= i %>" tabindex="-1" aria-hidden="true" data-bs-backdrop="static">
                        <div class="modal-dialog" role="document">
                          <div class="modal-content">
                            <div class="modal-header">
                              <h5 class="modal-title fs-1" id="confirmLabel">Confirmation</h5>
                              <!--begin::Close-->
                              <div class="btn btn-icon btn-sm btn-active-light-primary ms-2" data-bs-dismiss="modal" aria-label="Close">
                                <i class="ki-duotone ki-cross fs-2"><span class="path1"></span><span class="path2"></span></i>
                              </div>
                              <!--end::Close-->
                            </div>
                            <!-- begin::modal-body -->
                            <div class="modal-body">
                              <p class="message text-center fs-3 mb-0">
                                Are you sure..!! you want to <%= campaign[i].status === "Publish" ? 'unpublish' : 'publish' %> the campaign <b><%=  campaign[i].name %></b> ...?
                              </p>
                            </div>
                            <!-- end::modal-body -->
                            <!-- begin::modal-footer -->
                            <div class="modal-footer">
                              <a href="<%= process.env.BASE_URL %>campaign-status?id=<%= campaign[i]._id %>">
                                <button type="button" class="btn <%=  campaign[i].status === "Publish" ? 'btn-danger' : 'btn-success' %>">
                                  <%=  campaign[i].status === "Publish" ? 'UnPublish' : 'Publish' %>
                                </button>
                              </a>
                            </div>
                            <!-- end::modal-footer -->
                          </div>
                        </div>
                       </div>
                       <!--end::Modal - Enable/Disable  campaign -->

                        <!--begin::Modal - Delete campaign-->
                        <div class="modal fade" id="kt_modal_delete_campaign<%= i %>" tabindex="-1" aria-hidden="true" data-bs-backdrop="static">
                          <div class="modal-dialog">
                            <div class="modal-content">
                              <div class="modal-header">
                                <h5 Delete class="modal-title fs-2">Delete Confirmation</h5>
                                <!--begin::Close-->
                                <div class="btn btn-icon btn-sm btn-active-light-primary ms-2" data-bs-dismiss="modal" aria-label="Close">
                                  <i class="ki-duotone ki-cross fs-2"><span class="path1"></span><span class="path2"></span></i>
                                </div>
                                <!--end::Close-->
                              </div>

                              <div class="modal-body">
                                <p class="text-center fs-3">Are you sure..!! you want to delete the campaign<b> <%= campaign[i].name %></b> and all associated sliders and donors ??</p>
                              </div>

                              <div class="modal-footer">
                                <a href="<%= process.env.BASE_URL %>delete-campaign?id=<%= campaign[i]._id%>">
                                  <button type="button" class="btn btn-danger">Delete </button>
                                </a>
                              </div>

                              </form>
                            </div>
                          </div>
                        </div>
                        <!--end::Modal -delete campaign-->
                        <% } %>
                        <% } %>
                      </tbody>
                    </table>
                  </div>
                  <!--end::Table-->
                </div>
                <!--end::Card body-->
              </div>
              <!--end: pools-->
            </div>
            <!--end::Content container-->
          </div>
          <!--end::Content-->

             <!--begin::Modal - Not Authorized -->
             <div class="modal fade" id="kt_modal_no_access" tabindex="-1" aria-hidden="true" data-bs-backdrop="static">
              <!--begin::Modal-->
              <div class="modal-dialog  modal-dialog-centered">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title fs-1">Not Authorized</h5>
                    <!--begin::Close-->
                    <div class="btn btn-icon btn-sm btn-active-light-primary ms-2" data-bs-dismiss="modal" aria-label="Close">
                      <i class="ki-duotone ki-cross fs-2"><span class="path1"></span><span class="path2"></span></i>
                    </div>
                    <!--end::Close-->
                  </div>
  
                  <!-- begin::modal-body -->
                  <div class="modal-body">
                    <p class="text-center fs-3 mb-0" id="modal-message"></p>
                  </div>
                  <!-- end:: modal-body -->
  
                  <!-- begin::modal-footer -->
                  <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Ok</button>
                  </div>
                  <!-- end::modal-footer -->
  
                </div>
              </div>
            </div>
            <!--end::Modal-->
        </div>
        <!--end::Content wrapper-->

        <!--begin::Footer-->
        <div id="kt_app_footer" class="app-footer align-items-center justify-content-center justify-content-md-between flex-column flex-md-row py-3">
          <!--begin::Copyright-->
          <div class="text-dark order-2 order-md-1">
            <span class="text-muted fw-semibold me-1"></span>
            <a href="#" target="_blank" class="text-gray-800 text-hover-primary"></a>
          </div>
          <!--end::Copyright-->
        </div>
        <!--end::Footer-->
      </div>
      <!--end:::Main-->


    </div>
    <!--end::Wrapper-->

  </div>
  <!--end::Page-->
</div>
<!--end::App-->

<!--begin::Scrolltop-->
<div id="kt_scrolltop" class="scrolltop" data-kt-scrolltop="true">
  <i class="ki-duotone ki-arrow-up">
    <span class="path1"></span>
    <span class="path2"></span>
  </i>
</div>
<!--end::Scrolltop-->


<!-- partial:partials/header -->
<%- include('../layouts/footer.ejs') %>